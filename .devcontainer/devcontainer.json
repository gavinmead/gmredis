{
    "name": "GMRedis C++23 Development",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "twxs.cmake",
                "vadimcn.vscode-lldb",
                "xaver.clang-format",
                "jeff-hykin.better-cpp-syntax"
            ],
            "settings": {
                "cmake.configureOnOpen": false,
                "cmake.generator": "Ninja",
                "C_Cpp.default.cppStandard": "c++23",
                "C_Cpp.default.compilerPath": "/usr/bin/g++-14"
            }
        },
        "jetbrains": {
            "backend": "CLion"
        }
    },
    "features": {},
    "postCreateCommand": "conan profile detect --force && make setup",
    "remoteUser": "developer",
    "mounts": [
        "source=${localWorkspaceFolder}/.devcontainer/conan-cache,target=/home/developer/.conan2,type=bind,consistency=cached"
    ],
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ]
}
